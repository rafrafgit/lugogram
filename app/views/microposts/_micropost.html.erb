<% 
  	eyes = micropost.getVisibility()
  	visible_for = "Visible to: " 
    if current_user?(micropost.user)
      visible_for += "You"
    else
      visible_for += micropost.user.name  
    end
  	eyes.each do |u| 
  		if current_user?(u)
        visible_for = visible_for + ", " + "You" 
      else 
        visible_for = visible_for + ", " + u.name	
      end  
  	end

    name = ""
    if current_user?(micropost.user)
      name = "You"
    else
      name = micropost.user.name  
    end

    time = time_ago_in_words(micropost.created_at) + " ago"
  %><%= render 'shared/lugogram_message', avatar: micropost.user.avatar, name: name, time: time, visibility: visible_for, message: micropost.content, color: micropost.filter %>