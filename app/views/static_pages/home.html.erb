<% if signed_in? %>
   <script>
    function change(){
        var el1 = document.getElementById("message");
        var el2 = document.getElementById("micropost_content");
        el1.innerHTML = el2.value;
    }
    </script>
   <div class="hero-unit">
        <%= form_for(@micropost) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="field">
            <%= f.text_area :content, rows: "5", cols: "20", outline: "none", resize: "none", placeholder: "Compose new message", onkeyup: "change()" %>  
            <input type="hidden" id="micropost_filter" value="cute" />
            <%= f.email_field :recipients, placeholder: "to Email"  %>
          </div>
          <div><%= f.submit "Send", class: "btn btn-large btn-primary" %></div>      
        <% end %>
        <p align="right" size="10"><span id="char-count"><script type="text/javascript">  var maxLen = 100; $(function() { setCharCount($('#micropost_content')); }); $('#micropost_content').live('keyup keydown', function(e) {  setCharCount($(this)); });  function setCharCount(object) { var left = maxLen - object.val().length;  $('#char-count').html(left);}</script></span></p> 
  </div>      
  
  <%= render 'shared/lugogram_message', avatar: current_user.avatar, name: current_user.name, message:'Preview. Your message here', color: '#8BE8C8' %>
        
 </div>
 
<% else %>


<div class="center hero-unit" style="background-color: #ffffff;">
      <h1>Messaging without replys</h1>
      <p>
        Hacking the social convention of having to reply to messages. 
      </p>
      <br/>
      <p><%= link_to "Sign up now", signup_path, class: "btn btn-large btn-success" %></p>  
    </div>
